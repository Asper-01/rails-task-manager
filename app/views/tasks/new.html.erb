<div class="container row justify-content-center">
  <div class="form col-md-6">
<h2>Create a task:</h2>
    <div class="form-group">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <div class="form-group">
    <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
  </div>
<% end %>
    </div>
<h3 class="mt-4">Return to index:</h3>
<%= link_to "Index", root_path %>
  </div>
</div>
