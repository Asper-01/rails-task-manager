<div class="container">
<div class="form">
<h2>Edit a task:</h2>
</div>
<div class="form">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
    <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>
</div>
<div class="form">
<h3>Return to index:</h3>
<%= link_to "Index", root_path %>
</div>
</div>
